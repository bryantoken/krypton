<div class="min-h-screen flex items-center justify-center bg-gray-950 px-4 py-12">
  <div class="w-full max-w-md space-y-8 bg-gray-900 p-10 rounded-2xl border border-green-500/20 shadow-[0_0_50px_-12px_rgba(34,197,94,0.3)]">
    
    <div class="text-center">
      <h2 class="font-archivo text-4xl font-bold tracking-tighter text-green-500 drop-shadow-[0_0_10px_rgba(34,197,94,0.8)]">
        SYSTEM ACCESS
      </h2>
      <p class="mt-2 text-sm text-green-700 font-medium tracking-widest uppercase">
        Identity Verification Required
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <div class="space-y-4">
        <div class="field">
          <%= f.label :email, class: "block text-xs font-bold text-green-500 uppercase tracking-widest ml-1 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "block w-full rounded-lg border-0 bg-gray-800 py-3 text-green-400 shadow-sm ring-1 ring-inset ring-green-900 focus:ring-2 focus:ring-inset focus:ring-green-500 transition-all placeholder:text-gray-600" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "block text-xs font-bold text-green-500 uppercase tracking-widest ml-1 mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", 
              class: "block w-full rounded-lg border-0 bg-gray-800 py-3 text-green-400 shadow-sm ring-1 ring-inset ring-green-900 focus:ring-2 focus:ring-inset focus:ring-green-500 transition-all" %>
        </div>

        <%# Remember Me  %>
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center ml-1">
            <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-green-900 bg-gray-800 text-green-600 focus:ring-green-500 focus:ring-offset-gray-900" %>
            <%= f.label :remember_me, class: "ml-2 block text-xs font-medium text-green-800 uppercase tracking-wider" %>
          </div>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "Initialize Session", 
            class: "group relative flex w-full justify-center rounded-lg bg-green-600 px-3 py-4 text-sm font-archivo font-bold text-gray-950 hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-green-500 transition-all cursor-pointer shadow-[0_0_20px_rgba(34,197,94,0.4)] hover:shadow-[0_0_30px_rgba(34,197,94,0.6)]" %>
      </div>
    <% end %>

    <div class="text-center mt-6 space-y-2">
      <%# Renderiza os links de cadastro/esqueci senha  %>
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
