<div class="min-h-screen flex items-center justify-center bg-gray-950 px-4 py-12">
  <div class="w-full max-w-lg space-y-8 bg-gray-900 p-10 rounded-2xl border border-green-500/20 shadow-[0_0_50px_-12px_rgba(34,197,94,0.3)]">
    
    <div class="text-center">
      <h2 class="font-archivo text-3xl font-bold tracking-tighter text-green-500 drop-shadow-[0_0_8px_rgba(34,197,94,0.6)]">
        EDIT <%= resource_name.to_s.humanize.upcase %>
      </h2>
      <p class="mt-2 text-xs text-green-700 font-medium tracking-[0.2em] uppercase">
        System Protocol Update
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mt-8 space-y-5" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">
        <%# Email Field %>
        <div class="field">
          <%= f.label :email, class: "block text-xs font-bold text-green-500 uppercase tracking-widest ml-1 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "block w-full rounded-lg border-0 bg-gray-800 py-3 text-green-400 ring-1 ring-inset ring-green-900 focus:ring-2 focus:ring-green-500 transition-all" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-[10px] text-yellow-500 bg-yellow-500/10 p-2 rounded border border-yellow-500/20">
            Waiting confirmation for: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <%# Password Field %>
        <div class="field">
          <%= f.label :password, class: "block text-xs font-bold text-green-500 uppercase tracking-widest ml-1 mb-1" %>
          <p class="text-[10px] text-green-800 italic mb-1">(Leave blank to keep current)</p>
          <%= f.password_field :password, autocomplete: "new-password", 
              class: "block w-full rounded-lg border-0 bg-gray-800 py-3 text-green-400 ring-1 ring-inset ring-green-900 focus:ring-2 focus:ring-green-500 transition-all" %>
          <% if @minimum_password_length %>
            <p class="text-[10px] text-green-900 mt-1"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
        </div>

        <%# Password Confirmation %>
        <div class="field">
          <%= f.label :password_confirmation, class: "block text-xs font-bold text-green-500 uppercase tracking-widest ml-1 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "block w-full rounded-lg border-0 bg-gray-800 py-3 text-green-400 ring-1 ring-inset ring-green-900 focus:ring-2 focus:ring-green-500 transition-all" %>
        </div>

        <%# Current Password - Requisito Devise %>
        <div class="field pt-4 border-t border-green-500/10">
          <%= f.label :current_password, class: "block text-xs font-bold text-green-400 uppercase tracking-widest ml-1 mb-1" %> 
          <p class="text-[10px] text-green-800 italic mb-1">(Verification required to confirm changes)</p>
          <%= f.password_field :current_password, autocomplete: "current-password", 
              class: "block w-full rounded-lg border-0 bg-gray-800 py-3 text-green-400 ring-1 ring-inset ring-green-500/40 focus:ring-2 focus:ring-green-500 transition-all" %>
        </div>
      </div>

      <div class="actions pt-2">
        <%= f.submit "Update Profile", 
            class: "w-full rounded-lg bg-green-600 px-3 py-4 text-sm font-archivo font-bold text-gray-950 hover:bg-green-500 transition-all cursor-pointer shadow-[0_0_20px_rgba(34,197,94,0.3)] hover:shadow-[0_0_30px_rgba(34,197,94,0.5)]" %>
      </div>
    <% end %>

    <div class="mt-10 pt-6 border-t border-red-900/30">
      <h3 class="font-archivo text-lg text-red-600 mb-2">Danger Zone</h3>
      <div class="flex items-center justify-between bg-red-950/20 p-4 rounded-lg border border-red-900/20">
        <span class="text-sm text-gray-400 font-medium text-xs">Unhappy with the system? </span>
        <%= button_to "Terminate Account", registration_path(resource_name), 
            data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, 
            method: :delete,
            class: "text-[10px] font-bold text-red-500 hover:text-red-400 uppercase tracking-tighter transition-colors" %>
      </div>
    </div>

    <div class="text-center mt-6">
      <%= link_to "â† Back to System", :back, class: "text-xs font-bold text-green-800 hover:text-green-500 transition-colors uppercase" %>
    </div>

  </div>
</div>
