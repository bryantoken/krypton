<div class="min-h-screen flex items-center justify-center bg-gray-950 px-4 py-0">
  <div class="w-full max-w-md space-y-8 bg-gray-900 p-10 rounded-2xl border border-green-500/20 shadow-[0_0_50px_-12px_rgba(34,197,94,0.3)]">
    
    <div class="text-center">
      <h2 class="font-archivo text-4xl font-bold tracking-tighter text-green-500 drop-shadow-[0_0_10px_rgba(34,197,94,0.8)]">
        KRYPTON
      </h2>
      <p class="mt-2 text-sm text-green-700 font-medium tracking-widest uppercase">
        Create your identity
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">
        <div class="field">
  <%= f.label :nickname, "NICKNAME", class: "block text-xs font-bold text-green-500 uppercase tracking-widest ml-1 mb-1" %>
  <%= f.text_field :nickname, autofocus: true, placeholder: "IDENTITY_CODE",
      class: "px-2 block w-full rounded-lg border-0 bg-gray-800 py-3 text-green-400 shadow-sm ring-1 ring-inset ring-green-900 focus:ring-2 focus:ring-inset focus:ring-green-500 placeholder:text-gray-700 sm:text-sm transition-all" %>
</div>
        <div class="field">
          <%= f.label :email, class: "block text-xs font-bold text-green-500 uppercase tracking-widest ml-1 mb-1" %>
          <%= f.email_field :email, autofocus: true,placeholder: "AGENT_EMAIL", autocomplete: "email", 
              class: "px-2 block w-full rounded-lg border-0 bg-gray-800 py-3 text-green-400 shadow-sm ring-1 ring-inset ring-green-900 focus:ring-2 focus:ring-inset focus:ring-green-500 placeholder:text-gray-700 sm:text-sm transition-all" %>
        </div>

        <div class="field">
          <div class="flex justify-between items-end mb-1">
            <%= f.label :password, class: "block text-xs font-bold text-green-500 uppercase tracking-widest ml-1" %>
            <% if @minimum_password_length %>
              <span class="text-[10px] text-green-800 italic">(<%= @minimum_password_length %> min chars)</span>
            <% end %>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"SECRET_CODE", 
              class: "px-2 block w-full rounded-lg border-0 bg-gray-800 py-3 text-green-400 sm:text-sm shadow-sm ring-1 ring-inset ring-green-900 focus:ring-2 focus:ring-inset focus:ring-green-500 transition-all" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "block text-xs font-bold text-green-500 uppercase tracking-widest ml-1 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"SECRET_CODE",
              class: "block w-full sm:text-sm px-2 rounded-lg border-0 bg-gray-800 py-3 text-green-400 shadow-sm ring-1 ring-inset ring-green-900 focus:ring-2 focus:ring-inset focus:ring-green-500 transition-all" %>
        </div>
      </div>

      <div class="actions">

     <%= f.submit "Infect System", class: "w-full group flex items-center gap-3 border border-green-500/30 bg-green-500/5 px-6 py-3 rounded-lg text-xs font-archivo font-bold text-green-500 hover:bg-green-500/20 hover:border-green-500 transition-all shadow-[0_0_15px_rgba(34,197,94,0.1)] hover:shadow-[0_0_25px_rgba(34,197,94,0.3)] uppercase tracking-[0.2em]" do %>
        <span>Infect System</span>
      <% end %>




      </div>
    <% end %>

    <div class="text-center mt-6">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
