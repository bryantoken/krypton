<div class="min-h-screen flex items-center justify-center bg-gray-950 px-4 py-12">
  <div class="w-full max-w-md space-y-8 bg-gray-900 p-10 rounded-2xl border border-green-500/20 shadow-[0_0_50px_-12px_rgba(34,197,94,0.3)]">
    
    <div class="text-center">
      <h2 class="font-archivo text-3xl font-bold tracking-tighter text-green-500 drop-shadow-[0_0_8px_rgba(34,197,94,0.6)] uppercase">
        Forgotten Access
      </h2>
      <p class="mt-2 text-xs text-green-700 font-medium tracking-[0.2em] uppercase">
        Request Password Reset
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mt-8 space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "block text-xs font-bold text-green-500 uppercase tracking-widest ml-1 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"AGENT_EMAIL", 
            class: "block w-full rounded-lg border-0 bg-gray-800 px-2 py-3 text-green-400 shadow-sm ring-1 ring-inset ring-green-900 focus:ring-2 focus:ring-inset focus:ring-green-500 transition-all placeholder:text-gray-700 sm:text-sm" %>
      </div>

      <div class="actions">
              <%= f.submit "Send Reset Instructions", class: "w-full group flex items-center gap-3 border border-green-500/30 bg-green-500/5 px-6 py-3 rounded-lg text-xs font-archivo font-bold text-green-500 hover:bg-green-500/20 hover:border-green-500 transition-all shadow-[0_0_15px_rgba(34,197,94,0.1)] hover:shadow-[0_0_25px_rgba(34,197,94,0.3)] uppercase tracking-[0.2em]" do %>
        <span>Send Reset Instructions</span>
      <% end %>

      </div>
    <% end %>

    <div class="text-center mt-6 pt-4 border-t border-green-500/10">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
