<% if resource.errors.any? %>
  <div id="error_explanation" data-turbo-temporary 
       class="mb-6 p-4 rounded-lg bg-red-950/20 border border-red-500/50 shadow-[0_0_15px_rgba(239,68,68,0.2)] animate-pulse">
    
    <h2 class="font-archivo text-sm font-bold text-red-500 uppercase tracking-tighter flex items-center gap-2">
      <span class="h-2 w-2 bg-red-500 rounded-full shadow-[0_0_8px_rgba(239,68,68,1)]"></span>
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>

    <ul class="mt-3 space-y-1">
      <% resource.errors.full_messages.each do |message| %>
        <li class="text-[11px] font-mono text-red-400 flex items-start gap-2">
          <span class="text-red-600">>></span>
          <%= message %> 
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
