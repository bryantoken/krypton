<%= form_with(model: [post, comment || Comment.new], id: "comment_form_#{post.id}", class: "space-y-4") do |f| %>
  <div class="field">
    <%= f.text_area :body, 
        placeholder: "Type your message to the network...", 
        class: "w-full bg-gray-950 border border-green-500/30 rounded-lg text-green-400 text-sm focus:ring-2 focus:ring-green-500 placeholder:text-green-900 transition-all p-3" %>
  </div>

  <div class="flex justify-end">
    <%= f.submit "Send Message", 
        class: "px-6 py-2 bg-green-600 font-archivo font-bold text-gray-950 text-xs rounded hover:bg-green-400 cursor-pointer uppercase tracking-tighter transition-all" %>
  </div>
<% end %>
