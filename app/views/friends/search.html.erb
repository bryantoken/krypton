<div class="min-h-screen bg-gray-950 p-8">
  <div class="max-w-md mx-auto">
    <div class="text-center mb-10">
      <h2 class="font-archivo text-3xl font-bold tracking-tighter text-green-500 drop-shadow-[0_0_15px_rgba(34,197,94,0.3)]">
        SEARCH IDENTITY
      </h2>
      <p class="mt-2 text-[10px] text-green-700 font-medium tracking-widest uppercase">Locate users by nickname</p>
    </div>

    <%= form_with url: friends_search_path, method: :get, class: "space-y-6" do |f| %>
      <div class="field">
        <%= f.label :nickname, "TARGET NICKNAME", class: "block text-xs font-bold text-green-500 uppercase tracking-widest ml-1 mb-1" %>
        <%= f.text_field :nickname, value: params[:nickname], placeholder: "IDENTITY_CODE", 
            class: "px-2 block w-full rounded-lg border-0 bg-gray-800 py-3 text-green-400 shadow-sm ring-1 ring-inset ring-green-900 focus:ring-2 focus:ring-inset focus:ring-green-500 placeholder:text-gray-700 sm:text-sm transition-all" %>
      </div>
      <%= f.submit "INITIALIZE SCAN", class: "w-full rounded-lg bg-green-600 py-3 text-sm font-bold text-gray-950 hover:bg-green-500 cursor-pointer shadow-[0_0_20px_rgba(34,197,94,0.4)] transition-all" %>
    <% end %>

    <div class="mt-12 space-y-4">
      <% if @users.present? %>
        <% @users.each do |user| %>
          <div class="group bg-gray-900 border border-green-500/20 p-4 rounded-xl flex justify-between items-center hover:shadow-[0_0_15px_rgba(34,197,94,0.2)] transition-all">
            <span class="text-green-400 font-mono font-bold">@<%= user.nickname %></span>
            
            <% if current_user.following?(user) %>
              <span class="text-[10px] text-green-800 font-bold uppercase">CONNECTED</span>
            <% else %>
              <%= button_to "LINK USER", friendships_path(friend_id: user.id), 
                  class: "text-[10px] font-bold text-green-500 border border-green-500/30 px-3 py-1 rounded hover:bg-green-500/10 transition-all" %>
            <% end %>
          </div>
        <% end %>
      <% elsif params[:nickname].present? %>
        <p class="text-center text-xs text-red-900 font-bold uppercase tracking-widest">NO IDENTITY FOUND</p>
      <% end %>
    </div>

    <div class="mt-8 text-center">
      <%= link_to "BACK TO HUB", friends_path, class: "text-[10px] text-green-800 hover:text-green-500 uppercase tracking-widest font-bold" %>
    </div>
  </div>
</div>
