<div id="friendship_button_<%= user.id %>">
  <% if current_user.following?(user) %>
    <%# Localiza a relação existente para poder deletar (unfollow) %>
    <% friendship = current_user.friendships.find_by(friend_id: user.id) %>
    
    <%= button_to "TERMINATE LINK", friendship_path(friendship), 
        method: :delete, 
        class: "text-[10px] font-archivo font-bold text-red-500 border border-red-500/30 bg-red-500/5 px-4 py-2 rounded-lg hover:bg-red-500/20 hover:border-red-500 transition-all uppercase tracking-[0.2em]" %>
  <% else %>
    <%# Cria uma nova relação (follow) %>
    <%= button_to "ESTABLISH CONNECTION", friendships_path(friend_id: user.id), 

        method: :post, 
        class: "text-[10px] font-archivo font-bold text-green-500 border border-green-500/30 bg-green-500/5 px-4 py-2 rounded-lg hover:bg-green-500/20 hover:border-green-500 transition-all shadow-[0_0_15px_rgba(34,197,94,0.1)] uppercase tracking-[0.2em]" %>
  <% end %>
</div>
