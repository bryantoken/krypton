<div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-96 bg-green-500/5 blur-[120px] pointer-events-none"></div>
    <div class="max-w-7xl mx-auto relative z-10">
        <div class="flex items-center gap-2 mb-2">
                <span class="text-[9px] font-mono text-green-500 bg-green-500/10 px-2 py-0.5 rounded border border-green-500/20 uppercase tracking-[0.2em]">
                  System: Connected
                </span>
              </div>


    <div class="flex justify-between items-end mb-10 border-b border-green-500/20 pb-6">
      <div>
        <h1 class="font-archivo text-6xl font-extrabold tracking-tighter text-green-500 drop-shadow-[0_0_15px_rgba(34,197,94,0.3)]">NETWORK NODES
        </h1>
        <p class="mt-2 text-sm text-green-700 font-medium tracking-widest uppercase">Manage your encrypted connections</p>
      </div>
      <%= link_to friends_search_path, class: "group flex items-center gap-3 border border-green-500/30 bg-green-500/5 px-6 py-3 rounded-lg text-xs font-archivo font-bold text-green-500 hover:bg-green-500/20 hover:border-green-500 transition-all shadow-[0_0_15px_rgba(34,197,94,0.1)] hover:shadow-[0_0_25px_rgba(34,197,94,0.3)] uppercase tracking-[0.2em]" do %>
        <i class="ph ph-plus-circle text-lg"></i>
        <span>New Agent</span>
      <% end %>

    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">

      <section>
        <h3 class="font-archivo text-xs font-bold text-green-500 uppercase tracking-[0.3em] mb-6 flex items-center gap-2">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span> Authorized Connections
        </h3>
        <div class="space-y-4">
          <% if @following.any? %>
            <% @following.each do |friend| %>
              <%= render 'friends/user_card', user: friend, type: 'following' %>
            <% end %>
          <% else %>
            <p class="text-green-900 text-[10px] uppercase font-mono italic">No active outgoing links...</p>
          <% end %>
        </div>
      </section>

      <section>
        <h3 class="font-archivo text-xs font-bold text-green-800 uppercase tracking-[0.3em] mb-6">
          Inbound Signals (Followers)
        </h3>
        <div class="space-y-4">
          <% if @followers.any? %>
            <% @followers.each do |follower| %>
              <%= render 'friends/user_card', user: follower, type: 'follower' %>
            <% end %>
          <% else %>
            <p class="text-green-900 text-[10px] uppercase font-mono italic">No inbound signals detected...</p>
          <% end %>
        </div>
      </section>

    </div>
  </div>
</div>
