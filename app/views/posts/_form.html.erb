<%= form_with(model: post, class: "space-y-6") do |f| %>
  <div class="field">
    <%= f.label :cover_image, "System Cover Image", class: "block text-xs font-archivo text-green-500 uppercase mb-2" %>
    <div class="relative">
      <%= f.file_field :cover_image, class: "block w-full text-sm text-green-800 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border file:border-green-500/30 file:text-xs file:font-archivo file:bg-green-500/10 file:text-green-500 hover:file:bg-green-500/20 cursor-pointer transition-all" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :title, "Transmission Title", class: "block text-xs font-archivo text-green-500 uppercase mb-2" %>
    <%= f.text_field :title, placeholder: "Enter signal header...", class: "w-full bg-gray-900 border border-green-500/30 rounded-lg text-green-400 focus:ring-2 focus:ring-green-500 focus:border-transparent placeholder:text-green-900 transition-all" %>
  </div>

  <div class="field">
  <%= f.label :content, "Encrypted Content (Markdown/RichText)", class: "block text-xs font-archivo text-green-500 uppercase mb-2" %>
  <div class="min-h-[300px] bg-gray-900 border border-green-500/30 rounded-lg overflow-hidden">
    <%= f.rich_text_area :content, class: "trix-content p-4 text-green-100 outline-none min-h-[300px]" %>
  </div>
</div>

  <%= f.submit "Broadcast Signal", class: "w-full py-4 bg-green-600 font-archivo font-bold text-gray-950 rounded-lg hover:bg-green-500 shadow-[0_0_20px_rgba(34,197,94,0.4)] hover:shadow-[0_0_35px_rgba(34,197,94,0.6)] cursor-pointer transition-all uppercase tracking-tighter" %>
<% end %>
