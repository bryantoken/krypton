<div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
  <%# Brilho de fundo sutil %>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-96 bg-green-500/5 blur-[120px] pointer-events-none"></div>

  <div class="max-w-7xl mx-auto relative z-10">
    
    <%# Cabeçalho de Monitoramento %>
    <div class="flex flex-col md:flex-row justify-between items-end mb-16 border-b border-green-500/10 pb-10 gap-8">
      <div class="space-y-3">
        <div class="flex items-center gap-2 mb-2">
          <span class="text-[9px] font-mono text-green-500 bg-green-500/10 px-2 py-0.5 rounded border border-green-500/20 uppercase tracking-[0.2em]">
            System: Connected
          </span>
        </div>
        
        <h1 class="font-archivo font-extrabold text-6xl text-green-500 tracking-tighter uppercase drop-shadow-[0_0_15px_rgba(34,197,94,0.3)]">
          Global Feed
        </h1>

        <div class="flex items-center gap-4">
          <span class="relative flex h-2.5 w-2.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-green-500"></span>
          </span>
          <p class="text-[10px] text-green-700 font-mono uppercase tracking-[0.4em] opacity-80">
            Monitoring inbound transmissions... node_v0.1
          </p>
        </div>
      </div>
      
      <%# Botão New Broadcast Refinado (Mais integrado ao Terminal) %>
      <%= link_to new_post_path, class: "group flex items-center gap-3 border border-green-500/30 bg-green-500/5 px-6 py-3 rounded-lg text-xs font-archivo font-bold text-green-500 hover:bg-green-500/20 hover:border-green-500 transition-all shadow-[0_0_15px_rgba(34,197,94,0.1)] hover:shadow-[0_0_25px_rgba(34,197,94,0.3)] uppercase tracking-[0.2em]" do %>
        <i class="ph ph-plus-circle text-lg"></i>
        <span>New Broadcast</span>
      <% end %>
    </div>

    <%# Grid de Posts %>
    <div id="posts" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
      <% if @posts.any? %>
        <%= render @posts %>
      <% else %>
        <div class="col-span-full py-32 text-center border border-dashed border-green-900/20 rounded-3xl bg-gray-900/20">
          <i class="ph ph-mask-sad text-4xl text-green-900/40 mb-4 block"></i>
          <p class="font-archivo text-green-900/60 uppercase tracking-[0.3em]">No signal detected</p>
        </div>
      <% end %>
    </div>

  </div>
</div>
