<div class="min-h-screen bg-gray-950 py-12 px-4">
  <div class="max-w-4xl mx-auto">
    
    <div class="bg-gray-900/60 backdrop-blur-xl border border-green-500/30 rounded-t-3xl p-8 relative overflow-hidden">
      <div class="absolute inset-0 pointer-events-none opacity-5 bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.25)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] z-10 bg-[length:100%_2px,3px_100%]"></div>

      <div class="flex flex-col md:flex-row items-center gap-8 relative z-20">
        <div class="w-32 h-32 rounded-full border-2 border-green-500 shadow-[0_0_20px_rgba(34,197,94,0.5)] flex items-center justify-center bg-green-950/50">
          <span class="font-archivo text-4xl text-green-500 font-extrabold"><%= @user.email[0].upcase %></span> </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="font-archivo font-extrabold text-4xl text-green-500 tracking-tighter uppercase mb-2">
            <%= @user.email.split('@').first %>
          </h1>
          <div class="flex flex-wrap justify-center md:justify-start gap-4">
            <div class="px-3 py-1 bg-green-500/10 border border-green-500/20 rounded text-[10px] font-mono text-green-400">
              UID: <%= @user.id %>-KRYPTON
            </div>
            <div class="px-3 py-1 bg-green-500/10 border border-green-500/20 rounded text-[10px] font-mono text-green-400 uppercase">
              STATUS: AUTHORIZED
            </div>
          </div>
        </div>

        <div class="mt-4 md:mt-0">
          <%= render "friends/button", user: @user if user_signed_in? && current_user != @user %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-3 border-x border-b border-green-500/30 bg-gray-900/40 backdrop-blur-md overflow-hidden">
      <div class="p-6 text-center border-r border-green-500/20">
        <p class="text-[10px] font-archivo text-green-800 uppercase tracking-widest">Network</p>
        <p class="text-2xl font-archivo text-green-500"><%= @user.friends.count %></p>
        <p class="text-[8px] text-green-900 uppercase">Following</p>
      </div>
      <div class="p-6 text-center border-r border-green-500/20">
        <p class="text-[10px] font-archivo text-green-800 uppercase tracking-widest">Nodes</p>
        <p class="text-2xl font-archivo text-green-500"><%= @user.followers.count %></p>
        <p class="text-[8px] text-green-900 uppercase">Followers</p>
      </div>
      <div class="p-6 text-center">
        <p class="text-[10px] font-archivo text-green-800 uppercase tracking-widest">Logs</p>
        <p class="text-2xl font-archivo text-green-500"><%= @user.posts.count %></p>
        <p class="text-[8px] text-green-900 uppercase">Total Posts</p>
      </div>
    </div>

    <div class="mt-8">
      <h3 class="font-archivo text-xl text-green-500 uppercase mb-6 flex items-center gap-2">
        <span class="w-8 h-px bg-green-500/30"></span> Captured Data Logs
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <%= render @user.posts %>
      </div>
    </div>

  </div>
</div>
